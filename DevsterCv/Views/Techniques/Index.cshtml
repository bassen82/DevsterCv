@model IEnumerable<DevsterCv.Models.Technique>
@{
    ViewData["Title"] = "List Technique";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <div class="show-entries">
                    </div>
                </div>
                <div class="col-sm-4">
                    <h2 class="text-center">Lista <b>Tekniker & Verktyg</b></h2>
                </div>
                <div class="col-sm-4">
                    <div class="search-box">
                        <a href="@Url.Action("Create", "Techniques")" class="btn btn-primary btn-sm">Lägg till Teknik/Verktyg</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().TechniqueId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TechniqueId</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.TechniqueId" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                            <a asp-action="Edit" asp-route-id="@item.TechniqueId" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                            <a asp-action="Delete" asp-route-id="@item.TechniqueId" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="clearfix">
        </div>
    </div>
</div>

